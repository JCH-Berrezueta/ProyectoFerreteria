<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PresentacionCliente.VSecundary.VLogin"
             Title="VLogin"
             BackgroundColor="#029DAF">
    <Grid Padding="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Spacing="30" Grid.Row="0">
            <Label Text="MENU LOGIN"
               FontSize="Title"
               FontAttributes="Bold"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />

            <Label Text="USUARIO O CORREO ELECTRONICO"
               FontAttributes="Bold" />
            <Entry x:Name="CorreoU"
               TextColor="Black"
               BackgroundColor="White" />

            <Label Text="CONTRASEÃ‘A"
               FontAttributes="Bold" />
            <Entry x:Name="ContraU"
               TextColor="Black"
               IsPassword="True"
               BackgroundColor="White" />

            <Button Text="INGRESAR"
                Background="#E32551"
                CornerRadius="15"
                Clicked="ButtonIngresar" />
            <Button Text="REGISTRAR"
                Background="#E32551"
                CornerRadius="15"
                Clicked="ButtonRegister" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>